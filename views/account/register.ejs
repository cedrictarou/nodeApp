<!DOCTYPE html>
<html lang="ja">

<head>
  <%- include( "../_share/stylesheets.ejs") %>
</head>

<body class="text-center">
  <%- include( "../_share/navbar.ejs") %>
  <main class="container">
    <% const errors = locals.errors || {} %>
    <% const currentUser = locals.currentUser || {} %>
    <% if (locals.errors) { %>
    <div class="alert alert-danger">
      <% for (var key in errors) { %>
      <div><i class="fa fa-exclamation-circle fa-fw mr-2"></i><%= errors[key] %></div>
      <% } %>
    </div>
    <% } %>
    <form class="form-signin" method="POST" action="/create">

      <h1 class=" h3 mb-3 font-weight-normal">Please Register</h1>
      <label for="inputName" class="sr-only">Name</label>
      <input type="text" name="userName" id="inputName" class="form-control" placeholder="Name"
        value="<%= currentUser.name%>" autofocus />
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" name="userEmail" id="inputEmail" class="form-control" placeholder="Email address"
        value="<%= currentUser.email%>" autofocus required />
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" name="userPassword" id="inputPassword" class="form-control" placeholder="Password"
        value="<%= currentUser.password%>" required />
      <label for="inputPasswordConfirm" class="sr-only">Password</label>
      <input type="password" id="inputPasswordConfirm" class="form-control" placeholder="Confirm Password" required />

      <button class="btn btn-lg btn-primary btn-block" type="submit" id="submitBtn">
        Register
      </button>
      <p class="mt-5 mb-3 text-muted">&copy; 2020</p>
    </form>
  </main>

  <%- include( "../_share/javascripts.ejs") %>

  </script>
</body>

</html>